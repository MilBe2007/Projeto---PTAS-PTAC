generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senha     String
  createdAt DateTime  @default(now())
  reservas  Reserva[] // Relacionamento: um usuário pode ter várias reservas
}

model Mesa {
  id        Int       @id @default(autoincrement())
  codigo    Int       @unique
  n_lugares Int
  reservas  Reserva[] // Relacionamento: uma mesa pode ter várias reservas
}

model Reserva {
  id        Int       @id @default(autoincrement())
  data      DateTime
  usuarioId Int
  mesaId    Int
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
  mesa      Mesa      @relation(fields: [mesaId], references: [id])
  createdAt DateTime  @default(now())
}
